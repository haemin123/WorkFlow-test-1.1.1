
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 'users' 폴더 내의 사용자별 경로에 대한 규칙
    // authService.ts에서 사용하는 경로: users/{uid}/profile.jpg
    match /users/{userId}/{allPaths=**} {
      // 읽기: 로그인한 모든 사용자 허용 (프로필 이미지 공유를 위해)
      allow read: if request.auth != null;
      // 쓰기/삭제: 본인만 가능
      allow write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
